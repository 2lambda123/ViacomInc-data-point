{
  "name": "data-point-monorepo",
  "description": "DataPoint's documentation website",
  "version": "1.0.0",
  "private": true,
  "license": "Apache-2.0",
  "author": "Acatl Pacheco <acatl.pacheco@viacom.com>",
  "contributors": [
    "Christian Sarnataro <christian.sarnataro@vimn.com>",
    "Matthew Armstrong <MatthewR.Armstrong@viacom.com>"
  ],
  "homepage": "https://github.com/ViacomInc/data-point",
  "repository": {
    "type": "git",
    "url": "https://github.com/ViacomInc/data-point.git"
  },
  "bugs": {
    "url": "https://github.com/ViacomInc/data-point/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz",
    "contributors:add": "all-contributors add",
    "preinstall": "scripts/preinstall-script.js",
    "lint": "npmPkgJsonLint . && eslint '**/*.js'",
    "next": "yarn run lint && jest --coverage && lerna publish --cd-version=prerelease --npm-tag=next --yes",
    "publish": "yarn run lint && jest --coverage && lerna publish --conventional-commits",
    "run-examples": "scripts/run-examples.js",
    "test": "jest --coverage",
    "posttest": "echo 'skipping examples for now' #npm run run-examples",
    "watch": "jest --watchAll --coverage"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "airbnb": "^0.0.2",
    "all-contributors-cli": "^6.7.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "docusaurus-init": "^1.12.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.15.0",
    "lint-staged": "^9.2.0",
    "npm-package-json-lint": "^3.7.0",
    "prettier": "1.18.2",
    "prettier-package-json": "^2.1.0",
    "snazzy": "^8.0.0",
    "standard-version": "^6.0.1",
    "supertest": "^4.0.2"
  },
  "keywords": [
    "data-point"
  ],
  "engines": {
    "node": ">=10",
    "yarn": "^1.15.2"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/utils/",
      "/test/definitions/",
      "<rootDir>/packages/data-point-cache/lib/cache.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/packages/data-point-express",
      "<rootDir>/packages/data-point-service"
    ],
    "projects": [
      "<rootDir>/packages/data-point"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "package.json": [
      "npmPkgJsonLint",
      "prettier-package-json --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --quiet --fix",
      "git add",
      "jest --bail --findRelatedTests"
    ]
  }
}
